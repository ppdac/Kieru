@model Kieru.Models.Secret

@{
    ViewData["Title"] = "Create";
}

<h2 class="display-4">Create a New Secret</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Phrase" class="col-md-2 control-label"></label>
            <div class="ml-3">
                <textarea asp-for="Phrase" class=" form-control textarea-resize-both" rows="5"></textarea>
                <span asp-validation-for="Phrase" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

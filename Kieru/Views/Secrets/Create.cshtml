@model Kieru.Models.Secret

@{
    ViewData["Title"] = "Create";
}

<div class="bg-faded-sub">
    <div>
        <h2 class="display-4">Create a New Secret</h2>
    </div>
</div>


<div class="container body-content">
    <form asp-action="Create">
        <div class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <textarea placeholder="Enter your message here." asp-for="Phrase" class=" form-control textarea-resize-both col-12" rows="5"></textarea>
                <span asp-validation-for="Phrase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
